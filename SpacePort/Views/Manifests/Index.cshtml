@{
  Layout = "_Layout";
}

@using SpacePort.Models;
@model List<SpacePort.Models.Manifest>;

<h1>Manifests</h1>

@if (@Model.Count == 0)
{
  <h3>No  have been added yet!</h3>
} 

@foreach (Manifest manifest in Model)
{
  <li>@Html.ActionLink($"{manifest.Description}", "Details", new { id = manifest.ManifestId }) | @manifest.Vessel.Description</li>
}
<hr>

<Button>@Html.ActionLink("Add new manifest", "Create")</button>