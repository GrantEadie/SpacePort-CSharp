@{
  Layout = "_Layout";
}

@model SpacePort.Models.Manifest

<h4>Add a new manifest</h4>
<hr>

<div class="row">
  <div class="col-sm">
  
     @using (Html.BeginForm())
      {
          <p>VESSEL NAME: </p>
          @Html.DropDownList("VesselId", null, new {style="width:100%; height:30px; background-color:yellow;"})
          <br>
          <br>
          <p>YOUR NAME AND RANK: </p>
          @Html.TextBoxFor(model => model.UserName, new {style="width:100%"})
          <br>
          <br>
          <p>MANIFEST: </p>
          @Html.TextAreaFor(model => model.Description, new {cols = "55", rows = "10"})
          <br>
          <br>
          <input type="submit" value="Add manifest" class="btn btn-outline-light btn-block btn-sm"/>
      }
      <br>

    <a href="/Manifests" class="btn btn-outline-light btn-sm"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
