@{
  Layout = "_Layout";
}

@using Yelp.Models;
@model List<Yelp.Models.Vessel>;

<h1>Vessels</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, Not here! </h3>
} 

@foreach (Vessel vessel in Model)
{
  <li>@Html.ActionLink($"{vessel.Description}", "Details", new { id = vessel.VesselId }) | @vessel.Port.Name</li>
}
<hr>
@using (Html.BeginForm())
{
  @Html.Label("Search vessels by name")
  @Html.TextBox("Search")
  <input type="submit" value="search" class="btn btn-dark btn-sm"/>
}



<Button>@Html.ActionLink("Add new vessel", "Create")</button>